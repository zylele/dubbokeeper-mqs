<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dubboclub.dk.storage.mysql.mapper.AlarmServiceMapper">
	<select id="selectAlarmServiceByServiceName" resultType="AlarmServicePo" parameterType="AlarmServicePo">
       select id,host,service_name as serviceName,service_type as serviceType
       from alarm_service 
       where serviceName = #{serviceName};
    </select>
    <delete id="deleteAlarmService" >
    	delete from alarm_service 
    </delete>
    <insert id="addAlarmService" parameterType="AlarmServicePo">
    	insert into alarm_service (host,service_name,service_type)
    	values (#{host},
            #{serviceName},
            #{serviceType})
    </insert>
    <select id="selectAlarmServiceAll" resultType="AlarmServicePo">
    	select host,service_name as serviceName,service_type as serviceType from alarm_service
    </select>
    
</mapper>
	